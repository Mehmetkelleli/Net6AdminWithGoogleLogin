@model SignUpViewModel
@{
    TempData["Title"] = "Sign Up";
}
<section class="wrapper image-wrapper bg-image bg-overlay bg-overlay-light-600 text-white" data-image-src="/Home/assets/img/photos/bg18.png">
    <div class="container pt-17 pb-20 pt-md-19 pb-md-21 text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-1 mb-3">Sign Up</h1>
                <nav class="d-inline-block" aria-label="breadcrumb">
            </div>
            <!-- /column -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>

<!-- /section -->
<form class="text-start mb-3" asp-controller="Account" asp-action="SignUp" method="post" enctype="multipart/form-data">
<section class="wrapper bg-light">
    <div class="container pb-14 pb-md-16">
        <div class="row">
            <div class="col-lg-7 col-xl-6 col-xxl-5 mx-auto mt-n20">
                <div class="card">
                    <div class="card-body p-11 text-center">
                        <h2 class="mb-3 text-start">Sign Up To NameNameName</h2>
                        <div class="alert alert-danger lead mb-6 text-start" asp-validation-summary="All"></div>
                        <p class="lead mb-6 text-start">Registration takes less than a minute.</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-4">
                                        <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Name" id="loginName">
                                        <label for="loginName">Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-4">
                                        <input asp-for="LastName" value="@Model.LastName" class="form-control" placeholder="Last Name" id="lastname">
                                        <label for="lastname">Last Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="form-floating mb-4">
                                        <input asp-for="UserName" value="@Model.UserName" class="form-control" placeholder="User Name" id="username">
                                        <label for="username">User Name</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating mb-4">
                                        <input asp-for="Age" value="@Model.Age" class="form-control" placeholder="Age" id="age">
                                        <label for="age">Age</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-4">
                                <input asp-for="EMail" value="@Model.EMail" type="email" class="form-control" placeholder="Email" id="mail">
                                <label for="mail">Email</label>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                <input asp-for="FileImg" value="@Model.FileImg" type="file" class="form-control">
                                <label for="mail">User Image</label>
                                </div>    
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating password-field mb-4">
                                        <input asp-for="Password" value="@Model.Password" class="form-control" placeholder="Password" id="loginPassword">
                                        <span class="password-toggle"><i class="uil uil-eye"></i></span>
                                        <label for="loginPassword">Password</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating password-field mb-4">
                                        <input asp-for="RePassword" value="@Model.RePassword" class="form-control" placeholder="Confirm Password" id="loginPasswordConfirm">
                                        <span class="password-toggle"><i class="uil uil-eye"></i></span>
                                        <label for="loginPasswordConfirm">Confirm Password</label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary rounded-pill btn-login w-100 mb-2" type="submit">Sign Up</button>
                            <p class="mb-0">Already have an account? <a asp-controller="Account" asp-action="Login" class="hover">Sign in</a></p>
                            <div class="divider-icon my-4">or</div>
                            <nav class="nav social justify-content-center text-center">
                                <a href="#" class="btn btn-circle btn-sm btn-google"><i class="uil uil-google"></i></a>
                                <a href="#" class="btn btn-circle btn-sm btn-facebook-f"><i class="uil uil-facebook-f"></i></a>
                                <a href="#" class="btn btn-circle btn-sm btn-twitter"><i class="uil uil-twitter"></i></a>
                            </nav>
                            </div>
                        <!-- /form -->
                        
                        <!--/.social -->
                    </div>
                    <!--/.card-body -->
                </div>
</div></div></section>
</form>