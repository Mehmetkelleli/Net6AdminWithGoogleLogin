@model RoleViewModel
@{
    Layout = "_LayoutRoot";
}
<div class="content-wrapper">
    <div class="content-header row">
    </div>
    <div class="content-body">
        <!-- users list start -->
        <section class="app-user-list">
            <!-- users filter start -->
            <div class="card">
               <div class="row">
                  <button class="dt-button add-new btn btn-primary m-2" tabindex="0" aria-controls="DataTables_Table_0" type="button" data-toggle="modal" data-target="#modals-slide-in"><span>Role Add</span></button>
               </div>
            </div>
            <!-- users filter end -->
            <!-- list section start -->
            @if(Model.Roles.Count() == 0){

                <div class="alert alert-danger">No Role</div>

            }
            <div class="card">
                <div class="table-responsive pt-0">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th></th>
                                <th>Role Id</th>
                                <th>Role Name</th>
                                <th>Role User Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Roles)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>10</td>
                                    <td><a asp-controller="root" class="btn btn-primary mr-1 data-submit" asp-action="RoleUpdate" asp-route-id="@item.Id">Role Update</a><a asp-controller="root" class="btn btn-outline-secondary" asp-action="RoleDelete" asp-route-id="@item.Id">Role Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Modal to add new user starts-->
                <div class="modal modal-slide-in new-user-modal fade" id="modals-slide-in">
                    <div class="modal-dialog">
                        <form class="add-new-user modal-content pt-0" asp-action="RoleList" method="post">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
                            <div class="modal-header mb-1">
                                <h5 class="modal-title" id="exampleModalLabel">New Role</h5>
                            </div>
                            <div class="modal-body flex-grow-1">
                                <div class="form-group">
                                    <label class="form-label" for="basic-icon-default-fullname">Role Name</label>
                                    <input asp-for="AddRole" value="@Model.AddRole" class="form-control dt-full-name" id="basic-icon-default-fullname" placeholder="John Doe"aria-label="John Doe" aria-describedby="basic-icon-default-fullname2" />
                                </div>
                                <button type="submit" class="btn btn-primary mr-1 data-submit">Submit</button>
                                <button type="reset" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Modal to add new user Ends-->
            </div>
            <!-- list section end -->
        </section>
        <!-- users list ends -->

    </div>
</div>