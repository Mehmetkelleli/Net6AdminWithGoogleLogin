@model SiteConfigViewModel
@{
    Layout = "_LayoutRoot";
}
<div class="alert alert-danger" asp-validation-summary="All"></div>
<div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-9 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <h2 class="content-header-title float-left mb-0">Form Validation</h2>
                            <div class="breadcrumb-wrapper">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a asp-action="index">Home</a>
                                    </li>
                                    <li class="breadcrumb-item"><a href="#">Settings</a>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- Validation -->
                <section class="bs-validation">
                    <div class="row">
                        <!-- jQuery Validation -->
                        <div class="col-md-6 col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Database Datas</h4>
                                </div>
                                <div class="card-body">
                                    <form id="jquery-val-form" asp-controller="Root" asp-action="SiteConfig" method="post">
                                        <div class="row">
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Author Name</label>
                                                    <input class="form-control" asp-for="SiteAdmin" value="@Model.SiteAdmin" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Site Descriptions</label>
                                                    <input class="form-control" asp-for="SiteDescriptions" value="@Model.SiteDescriptions" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Meta Tags</label>
                                                    <input class="form-control" asp-for="MetaTags" value="@Model.MetaTags" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Site Logo</label>
                                                    <input class="form-control" type="File" name="SiteLogo" />
                                                    <input class="form-control" type="hidden" asp-for="SiteLogoUrl" value="@Model.SiteLogoUrl" />
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Host</label>
                                                    <input class="form-control" asp-for="Host" value="@Model.Host" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Smtp Host</label>
                                                    <input class="form-control" asp-for="SmtpHost" value="@Model.SmtpHost" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Smtp Port</label>
                                                    <input class="form-control" asp-for="SmtpPort" value="@Model.SmtpPort" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Smtp User</label>
                                                    <input class="form-control" asp-for="SmtpUser" value="@Model.SmtpUser" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-default-name">Smtp Password</label>
                                                    <input class="form-control" type="password" asp-for="SmtpPassword" value="@Model.SmtpPassword" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <button type="submit" class="btn btn-primary" name="submit" value="Submit">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /jQuery Validation -->
                    </div>
                </section>
                <!-- /Validation -->

            </div>
